{
  "name": "engrain",
  "version": "0.0.1",
  "description": "Engrain agent skills into always-on context. Transforms skills into embedded knowledge for LLM agents.",
  "type": "module",
  "bin": {
    "engrain": "./bin/engrain.mjs"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "dev": "bun src/engrain.ts",
    "build": "bun build src/engrain.ts --outfile dist/engrain.js --target node --minify",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "ai",
    "llm",
    "agent",
    "skills",
    "context",
    "claude",
    "agents-md",
    "knowledge",
    "embedding",
    "minify"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olavocarvalho/engrain.git"
  },
  "author": "Olavo Carvalho",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "simple-git": "^3.30.0",
    "tokenx": "^1.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest"
  }
}